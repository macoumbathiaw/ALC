<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E711E">


    <!-- Display the Africa Venture logo in the Splash screen. I created the logo using the android studio Image Asset -->

    <ImageView
        android:id="@+id/splashScreenImageViewID"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher" />

    <!-- Display the Africa Venture text in the Splash screen  -->
    <TextView
        android:id="@+id/splashScreenTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashScreenImageViewID"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="Africa Tech Venture"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="italic" />

</RelativeLayout>